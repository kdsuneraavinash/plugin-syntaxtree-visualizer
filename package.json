{
    "name": "ballerinacompilertools",
    "displayName": "Ballerina Compiler Tools",
    "description": "VSCode Compiler Tools for Ballerina",
    "version": "2.0.0-Alpha-SNAPSHOT",
    "publisher": "ballerina",
    "repository": {
        "type": "git",
        "url": "https://github.com/SumayyaZiyad/plugin-syntaxtree-visualizer.git"
    },
    "icon": "resources/images/ballerina.png",
    "galleryBanner": {
        "color": "#e7eaeb",
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.30.2"
    },
    "categories": [
        "Programming Languages",
        "Visualization",
        "Extension Packs"
    ],
    "activationEvents": [
        "onLanguage:ballerina",
        "onCommand:ballerinaCompilerTools.visualizeSyntaxTree"
    ],
    "contributes": {
        "languages": [
            {
                "id": "ballerina",
                "aliases": [
                    "Ballerina",
                    "ballerina"
                ],
                "extensions": [
                    ".bal"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ballerina Compiler Tools",
            "properties": {
                "ballerinaCompilerTools.plugin.dev.mod": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable plugin development mode"
                },
                "ballerinaCompilerTools.home": {
                    "type": "string",
                    "default": "",
                    "description": "Specifies the path to the ballerina home directory"
                }
            }
        },
        "commands": [
            {
                "command": "ballerinaCompilerTools.visualizeSyntaxTree",
                "title": "Syntax Tree Visualizer",
                "category": "Ballerina Compiler Tools"
            }
        ]
    },
    "main": "./dist/extension",
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch --info-verbosity verbose",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "update-version": "node ./scripts/update-version.js",
        "test-compile": "tsc -p ./",
        "test": "npm run test-compile && node ./node_modules/vscode/bin/test",
        "test-coverage": "cross-env COVER_CONFIG=html npm run test",
        "package": "vsce package",
        "lint": "tslint --fix 'src/**/*{.ts,.tsx}'"
    },
    "dependencies": {
        "@types/js-base64": "^2.3.1",
        "dom-parser": "^0.1.6",
        "elkjs": "^0.7.0",
        "js-base64": "^2.5.1",
        "lodash": "^4.17.11",
        "mousetrap": "^1.6.3",
        "promise.any": "^2.0.2",
        "vscode-languageclient": "^6.1.4",
        "vscode-languageserver-types": "^3.14.0",
        "ws": "^6.2.1"
    },
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/dom-parser": "^0.1.1",
        "@types/glob": "^7.1.3",
        "@types/lodash": "^4.14.168",
        "@types/mocha": "^2.2.42",
        "@types/node": "^14.14.37",
        "@types/ws": "^6.0.4",
        "chai": "^4.3.4",
        "cross-env": "^7.0.3",
        "decache": "^4.6.0",
        "glob": "^7.1.6",
        "istanbul": "^0.4.5",
        "js-yaml": "^3.14.1",
        "mocha": "^5.2.0",
        "remap-istanbul": "^0.13.0",
        "ts-loader": "^6.2.2",
        "ts-node": "^9.1.1",
        "tslint": "^5.20.1",
        "typescript": "^4.2.3",
        "vsce": "^1.87.0",
        "vscode": "^1.1.37",
        "vscode-debugadapter-testsupport": "^1.46.0",
        "webpack": "^5.28.0",
        "webpack-cli": "^4.5.0"
    }
}
